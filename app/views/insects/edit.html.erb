<%= simple_form_for [ @insect ] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :order %>
  <%= f.text_field :order %>
      <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none"},
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.label "ajouter des images" %>
  <%= f.file_field :photos, multiple: true %>
  <%= f.submit "Modifier l'insect", class: "btn btn-primary" %>
<% end %>
