<div class="container">

    <h1>Les insectes</h1>

    <%= form_tag insects_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a movie"%>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>


    <div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <div class="row d-flex justify-content-center">
    <% @insects.each do |insect| %>
      <div class="card-product col-sm-12 col-md-3">
        <%= cl_image_tag insect.photos.first.key,  class:"d-block w-100" %>
        <%=link_to insect_path(insect) do %>
          <div class="card-product-infos">
              <h2><%= insect.name.capitalize%></h2>
              <p> <i><%= insect.order %></i></p>
              <div class="row">
  <div class="col-3 text-truncate">
    Praeterea iter est quasdam res quas ex communi.
  </div>
</div>

<span class="d-inline-block text-truncate" style="max-width: 150px;">
  Praeterea iter est quasdam res quas ex communi.
</span>
              <td valign="top" height="85"  style="padding:0">

                <p class=""> <%= insect.description %></p>
              </div>
              <div class="icon">
                <%=link_to insect_path(insect) do %>
                  <i class="fa-solid fa-eye"></i>
                <% end %>

              </div>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
